<UserControl x:Class="UniversalPackageExplorer.FallbackTextBlock"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UniversalPackageExplorer"
             mc:Ignorable="d" 
             x:Name="PropValue"
             d:DesignHeight="40" d:DesignWidth="300">
    <TextBlock Text="{Binding ComputedText, ElementName=PropValue, Mode=OneWay}"
               FontStyle="{Binding ComputedFontStyle, ElementName=PropValue, Mode=OneWay}"
               Foreground="{Binding ComputedForeground, ElementName=PropValue, Mode=OneWay}"/>
</UserControl>
