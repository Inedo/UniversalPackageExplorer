<Window x:Class="UniversalPackageExplorer.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UniversalPackageExplorer"
        mc:Ignorable="d"
        x:Name="About"
        Title="About Universal Package Explorer" Height="100" Width="300" WindowStartupLocation="CenterOwner">
    <Grid>
        <WrapPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="5">
            <Label Content="Universal Package Explorer version " Padding="0"/>
            <Label Content="{Binding VersionText, ElementName=About}" Grid.Column="1" Padding="0"/>
        </WrapPanel>
    </Grid>
</Window>
